-- =========================================
-- Quiz System Database Schema
-- Contains tables for admin credentials, quiz questions, options, and results
-- =========================================

-- Table for storing admin credentials
CREATE TABLE admin (
    admin_id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(50) NOT NULL,
    password VARCHAR(255) NOT NULL
);

-- Insert a default admin user
INSERT INTO admin (username, password)
VALUES ('admin', 'admin');

-- Table for storing quiz questions
CREATE TABLE questions (
    question_id INT AUTO_INCREMENT PRIMARY KEY,
    question TEXT NOT NULL
);

-- Table for storing options for each question
CREATE TABLE options (
    option_id INT AUTO_INCREMENT PRIMARY KEY,
    question_id INT NOT NULL,
    option_text VARCHAR(255) NOT NULL,
    is_correct BOOLEAN NOT NULL,
    FOREIGN KEY (question_id) REFERENCES questions(question_id) ON DELETE CASCADE
);

-- Table for storing quiz results
CREATE TABLE results (
    result_id INT AUTO_INCREMENT PRIMARY KEY,
    student_name VARCHAR(100) NOT NULL,
    score INT NOT NULL
);
